<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Subject</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to subjects_path, class: button_class(theme: "transparent") do %>
      All Subjects
      <% end %>
      <%= link_to edit_subject_path(@subject), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Name:</p>
        <p><%= @subject.name %></p>
      </li>
      <li>
        <p class="font-semibold">Description:</p>
        <p><%= @subject.description %></p>
      </li>
  </ul>
</div>
